{
  "name": "tanaka-extension",
  "version": "0.5.0",
  "description": "Firefox extension for cross-device tab synchronization",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "gen-icons": "sh icons/generate-icons.sh",
    "build:dev": "tsx scripts/build.ts --mode=development",
    "build:staging": "tsx scripts/build.ts --mode=staging",
    "build:prod": "tsx scripts/build.ts --mode=production",
    "build": "echo 'Please specify environment: build:dev, build:staging, or build:prod' && exit 1",
    "build:all": "pnpm build:dev && mv dist dist-dev && pnpm build:staging && mv dist dist-staging && pnpm build:prod && mv dist dist-prod",
    "watch": "tsx scripts/watch.ts --mode development",
    "dev": "tsx scripts/dev.ts --mode development",
    "dev:rspack": "BUILD_ENV=development rspack serve",
    "dev:staging": "BUILD_ENV=staging rspack serve",
    "analyze": "BUILD_ENV=production RSPACK_BUNDLE_ANALYZE=true rspack build",
    "start": "web-ext run --source-dir dist --firefox-profile=dev-profile --keep-profile-changes",
    "dev:extension": "concurrently \"pnpm watch\" \"pnpm start\"",
    "webapp": "APP_MODE=webapp rspack serve --mode development --config rspack.config.ts",
    "playground": "APP_MODE=playground rspack serve --mode development --config rspack.config.ts",
    "lint": "eslint 'src/**/*.ts' 'scripts/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'scripts/**/*.ts' --fix",
    "lint:fix:specific": "eslint --fix",
    "format": "prettier --write 'src/**/*.{ts,html,css}' 'scripts/**/*.ts' 'manifest.json'",
    "typecheck": "tsc --noEmit",
    "quality-check": "pnpm run lint && pnpm run typecheck",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prototype:test": "cd prototype && npx backstop test",
    "prototype:reference": "cd prototype && npx backstop reference",
    "prototype:approve": "cd prototype && npx backstop approve",
    "prototype:validate": "node prototype/verify-tanaka-extraction.cjs",
    "prototype:purge": "cd prototype && npx purgecss --css css/*.css --content *.html --output css/",
    "prototype:format": "cd prototype && npx csscomb css/*.css",
    "tcm": "tcm src/playground/styles -p '**/*.module.scss' --watch"
  },
  "keywords": [
    "firefox",
    "extension",
    "tabs",
    "sync"
  ],
  "author": "Manish Mathai <manish@manishmathai.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@jest/globals": "^30.0.2",
    "@rspack/cli": "^1.3.15",
    "@rspack/core": "^1.3.15",
    "@rspack/plugin-react-refresh": "^1.4.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "autoprefixer": "^10.4.21",
    "backstopjs": "^6.3.25",
    "chalk": "^5.4.1",
    "concurrently": "^9.2.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "css-validator": "^0.11.0",
    "csscomb": "^4.3.0",
    "cssnano": "^7.0.7",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "html-rspack-plugin": "^6.1.2",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jiti": "^2.4.2",
    "lint-staged": "^16.1.2",
    "mini-css-extract-plugin": "^2.9.2",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.2.4",
    "prettier": "^3.6.0",
    "puppeteer": "^24.11.2",
    "purgecss": "^7.0.2",
    "react-refresh": "^0.17.0",
    "sass": "^1.89.2",
    "sass-loader": "^16.0.5",
    "style-loader": "^4.0.0",
    "stylelint": "^16.21.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typed-css-modules": "^0.9.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "web-ext": "^8.8.0",
    "webextension-polyfill": "^0.12.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@mantine/core": "^8.1.3",
    "@mantine/hooks": "^8.1.3",
    "@mantine/modals": "^8.1.3",
    "@mantine/notifications": "^8.1.3",
    "@preact/signals": "^2.2.0",
    "preact": "^10.26.9",
    "preact-router": "^4.1.2",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "yjs": "^13.6.27"
  }
}
