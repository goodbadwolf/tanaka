{
  "name": "tanaka-extension",
  "version": "0.1.0",
  "description": "Firefox extension for cross-device tab synchronization",
  "private": true,
  "type": "module",
  "scripts": {
    "predist": "mkdir -p dist",
    "dist:manifest": "cp manifest.json dist/",
    "dist:icons": "cp -r icons dist/",
    "dist": "pnpm run dist:manifest && pnpm run dist:icons",
    "gen-icons": "sh icons/generate-icons.sh",
    "prewatch": "pnpm run dist",
    "watch": "vite build --watch",
    "prebuild": "pnpm run dist",
    "build": "vite build",
    "start": "web-ext run --source-dir dist",
    "dev": "pnpm run prebuild && concurrently \"pnpm run watch\" \"sleep 2 && pnpm run start\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.{ts,html,css}",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "firefox",
    "extension",
    "tabs",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "web-ext": "^8.7.1",
    "webextension-polyfill": "^0.12.0"
  },
  "dependencies": {
    "yjs": "^13.6.27"
  }
}
