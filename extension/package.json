{
  "name": "tanaka-playground",
  "version": "0.1.0",
  "description": "Tanaka browser extension",
  "displayName": "Tanaka",
  "overrides": {
    "@crxjs/vite-plugin": "$@crxjs/vite-plugin"
  },
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/goodbadwolf/tanaka"
  },
  "scripts": {
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "cross-env NODE_ENV=production vite build -c vite.chrome.config.ts",
    "build:firefox": "cross-env NODE_ENV=production vite build -c vite.firefox.config.ts",
    "dev": "concurrently \"npm run dev:chrome\" \"npm run dev:firefox\"",
    "dev:chrome": "cross-env NODE_ENV=development vite -c vite.chrome.config.ts",
    "dev:firefox": "cross-env NODE_ENV=development vite build --mode development --watch -c vite.firefox.config.ts",
    "format": "prettier --write .",
    "launch:chrome": "tsx scripts/launch.ts -c",
    "launch:firefox": "tsx scripts/launch.ts -f",
    "launch:all": "tsx scripts/launch.ts --all",
    "lint": "eslint . --fix",
    "lint:manifest": "web-ext lint --pretty",
    "lint:generated": "eslint --fix src/api/**/*.ts",
    "typecheck": "vue-tsc --noEmit",
    "tests": "vitest --passWithNoTests",
    "tests:watch": "vitest --watch --passWithNoTests",
    "tests:coverage": "vitest --coverage --passWithNoTests",
    "tests:ui": "vitest --ui --passWithNoTests"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.525.0",
    "neverthrow": "^8.2.0",
    "tailwind-merge": "^3.3.1",
    "tsyringe": "^4.10.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.2",
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@iconify-json/lucide": "^1.2.57",
    "@iconify-json/ph": "^1.2.2",
    "@iconify-json/svg-spinners": "^1.2.2",
    "@intlify/unplugin-vue-i18n": "^6.0.8",
    "@nuxt/ui": "^3.2.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/eslint": "^9.6.1",
    "@types/node": "^24.0.13",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/compiler-sfc": "^3.5.17",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^13.5.0",
    "chalk": "^5.4.1",
    "chrome-types": "^0.1.361",
    "commander": "^14.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "get-installed-browsers": "^0.1.7",
    "globals": "^16.3.0",
    "happy-dom": "^18.0.1",
    "marked": "^16.0.0",
    "pinia": "^3.0.3",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "tsx": "^4.20.3",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "unplugin-imagemin": "^0.6.9",
    "unplugin-turbo-console": "^2.2.0",
    "unplugin-vue-router": "^0.14.0",
    "vite": "^7.0.4",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vite-plugin-zip-pack": "^1.2.4",
    "vitest": "^3.2.4",
    "vue": "^3.5.17",
    "vue-i18n": "^11.1.9",
    "vue-router": "^4.5.1",
    "vue-tsc": "^3.0.1",
    "web-ext": "^8.8.0",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.12.0"
  }
}
