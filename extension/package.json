{
  "name": "tanaka-extension",
  "version": "0.1.0",
  "description": "Firefox extension for cross-device tab synchronization",
  "private": true,
  "type": "module",
  "scripts": {
    "gen-icons": "sh icons/generate-icons.sh",
    "build": "tsx scripts/build.ts",
    "watch": "tsx scripts/watch.ts",
    "dev": "tsx scripts/dev.ts",
    "lint": "eslint 'src/**/*.ts' 'src/**/*.test.ts' 'scripts/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'src/**/*.test.ts' 'scripts/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,html,css}' 'src/**/*.test.ts' 'scripts/**/*.ts' 'manifest.json'",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "quality-check": "pnpm run lint && pnpm run lint:fix && pnpm run format && pnpm run typecheck && pnpm run test"
  },
  "keywords": [
    "firefox",
    "extension",
    "tabs",
    "sync"
  ],
  "author": "Manish Mathai <manish@manishmathai.com>",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "^24.0.3",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "chalk": "^5.4.1",
    "concurrently": "^9.1.2",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "lint-staged": "^16.1.2",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.5.3",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "web-ext": "^8.8.0",
    "webextension-polyfill": "^0.12.0"
  },
  "dependencies": {
    "yjs": "^13.6.27"
  }
}
