{
  "name": "tanaka",
  "version": "0.1.0",
  "private": true,
  "description": "Root-level tooling for Tanaka project",
  "packageManager": "pnpm@10.11.0",
  "scripts": {
    "lint:md": "markdownlint-cli2 '*.md' 'docs/*.md' '!repomix-output.txt.md'",
    "lint:md:fix": "markdownlint-cli2 --fix '*.md' 'docs/*.md' '!repomix-output.txt.md'",
    "generate:types": "cd server && cargo run --bin generate_types"
  },
  "devDependencies": {
    "markdownlint-cli2": "^0.18.1"
  }
}
